# ===========================================
# Evolution API Lite - Variables de Entorno
# ===========================================

# ===========================================
# SERVIDOR
# ===========================================
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=http://localhost:8080
SERVER_DISABLE_DOCS=false
SERVER_DISABLE_MANAGER=false

# ===========================================
# CORS
# ===========================================
CORS_ORIGIN=["*"]
CORS_METHODS=["GET","POST","PUT","DELETE"]
CORS_CREDENTIALS=true

# ===========================================
# BASE DE DATOS
# ===========================================
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI=postgresql://user:pass@localhost:5432/evolution
DATABASE_CONNECTION_CLIENT_NAME=evolution-api

# Configuración de guardado de datos
DATABASE_SAVE_DATA_INSTANCE=true
DATABASE_SAVE_DATA_HISTORIC=true
DATABASE_SAVE_DATA_NEW_MESSAGE=true
DATABASE_SAVE_DATA_MESSAGE_UPDATE=true
DATABASE_SAVE_DATA_CONTACTS=true
DATABASE_SAVE_DATA_CHATS=true
DATABASE_SAVE_DATA_LABELS=true
DATABASE_SAVE_DATA_IS_ON_WHATSAPP=true
DATABASE_SAVE_DATA_IS_ON_WHATSAPP_DAYS=7

# Configuración de eliminación de datos
DATABASE_DELETE_DATA_LOGICAL_MESSAGE_DELETE=false

# ===========================================
# CACHE
# ===========================================
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://localhost:6379
CACHE_REDIS_PREFIX_KEY=evolution
CACHE_REDIS_TTL=3600
CACHE_REDIS_SAVE_INSTANCES=true

CACHE_LOCAL_ENABLED=false
CACHE_LOCAL_TTL=3600

# ===========================================
# AUTENTICACIÓN
# ===========================================
AUTHENTICATION_API_KEY=tu-api-key-super-secreta
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=false

# ===========================================
# LOGS
# ===========================================
LOG_LEVEL=["ERROR","WARN","INFO"]
LOG_COLOR=true
LOG_BAILEYS=error

# ===========================================
# WHATSAPP BUSINESS API (Meta)
# ===========================================
WA_BUSINESS_TOKEN_WEBHOOK=tu-token-webhook
WA_BUSINESS_URL=https://graph.facebook.com
WA_BUSINESS_VERSION=v18.0
WA_BUSINESS_LANGUAGE=es_ES

